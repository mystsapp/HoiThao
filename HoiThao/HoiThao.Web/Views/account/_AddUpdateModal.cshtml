                        </div>





                        <div class="checkbox form-group col-md-3">
                            <label><input type="checkbox" id="ckTrangThai"> Trạng thái:</label>
                        </div>
                        <div class="clearfix"></div>

                        <input type="hidden" class="form-control" name="ngaytao" id="txtNgayTao">
                        <input type="hidden" class="form-control" name="ngaycapnhat" id="txtNgayCapNhat">
                        <input type="hidden" class="form-control" name="hidPass" id="txtHidPass">
                        <input type="hidden" class="form-control" name="hidPass" id="txtHidID">

                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnSave"><i class="fa fa-save"></i> Lưu</button>
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-power-off"></i></button>
            </div>
        </div>

    </div>
</div>
