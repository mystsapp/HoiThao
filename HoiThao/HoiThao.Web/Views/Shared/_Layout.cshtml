<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link href="~/Assets/Admin/css/navbar.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#3E5C9A;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="logo">
                    <a href="/">
                        <img src="/Content/image/logo-color-big1.png" alt="logo" />
                    </a>
                </div>
            </div>

            <div class="collapse navbar-collapse">

                <ul class="nav navbar-nav reportNavbar">
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Report <b class="caret"></b></a>
                        <ul class="dropdown-menu multi-level">



                            <li><a @*id="Conference"*@ href="/Report/ConferenceReport">Conference</a></li>
                            <li><a @*id="Workshop"*@ href="/Report/WorkshopReport">Workshop</a></li>
                            <li><a @*id="ConferenceGroupByCountry"*@ href="/Report/ConferenceGroupByCountry">Conference group by country</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a @*id="InvitedGuests"*@ href="/Report/InvitedGuests">Invited guests</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a @*id="Received*@ paymnet" href="/Report/Received">Received payment</a></li>
                            <li><a @*id="PickupAtTheAirport"*@ href="/Report/PickupAtTheAirport">Pickup at the airport</a></li>
                            <li><a @*id="SeeOffAtTheAirport"*@ href="/Report/SeeOffAtTheAirport">See off at the airport</a></li>
                            <li><a @*id="BuyAirTicket"*@ href="/Report/BuyAirTicket">Buy air ticket</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a @*id="Tour"*@ href="/Report/Tour">Tour</a></li>
                            <li role="separator" class="divider"></li>

                            <li class="dropdown-submenu">
                                <a href="#" id="HotelList" class="dropdown-toggle" data-toggle="dropdown">Hotel</a>
                                @*<ul class="dropdown-menu">
                                    <li><a  href="/Report/Furama">Furama</a></li>
                                    <li><a  href="/Report/Sea">Sea</a></li>
                                    <li><a  href="/Report/MuongThanh">Muong thanh</a></li>
                                    <li><a  href="/Report/Titan">Titan</a></li>
                                    <li><a  href="/Report/Equatorial">Equatorial</a></li>
                                    <li><a  href="/Report/Sheraton">Sheraton</a></li>
                                    <li><a  href="/Report/Other">Other</a></li>
                                </ul>*@
                            </li>

                            <li><a @*id="CheckinList"*@ href="/Report/CheckinList">Checkin list</a></li>
                            <li><a @*id="VatBill"*@ href="/Report/VatBill">VAT bill</a></li>
                            <li><a @*id="OnSiteList"*@ href="/Report/OnSiteList">On site list</a></li>
                            <li><a @*id="Speaker"*@ href="/Report/Speaker">Speaker</a></li>



                        </ul>
                    </li>

                    <li><a href="#" id="ImportData">Import data</a></li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>







    <div class="container body-content">

        @if (TempData["AlertMessage"] != null)
        {
            <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                @TempData["AlertMessage"]
            </div>
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Assets/Admin/js/alertBox.js"></script>
    <script src="~/Assets/Admin/js/Plugin/numeral/numeral.js"></script>
    <script src="~/Assets/Admin/js/Layout/layoutController.js"></script>
    <script src="~/Assets/Admin/js/Layout/reportController.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
@RenderPage("_ImportExcelModal.cshtml");
